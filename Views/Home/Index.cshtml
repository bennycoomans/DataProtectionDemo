@model DataProtectionDemo.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

@if (Model.Message != null)
{
    <div class="alert alert-success" role="alert">
        @Model.Message
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">No message posted yet</h1>
    </div>
}

<form method="post" asp-controller="Home" asp-action="SubmitMessage">
    <input type="text" name="message" />
    <input type="submit" value="Submit" />
</form>